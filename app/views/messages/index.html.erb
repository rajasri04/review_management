<p id="notice"><%= notice %></p>

<h1>Listing messages sent by you </h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>To</th>
      <th>Content</th>
      <th>Created at</th>
      <th>Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sent_msg.each do |s| %>
      <tr>
        <td><%= s.to %></td>
        <td><%= "#{s.project_name} with project_description : #{s.project_description}" %></td>
        <td><%= s.created_at%></td>
        <td><%= s.updated_at%></td>
        <td><%= link_to 'Show' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Listing messages received by you </h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>From</th>
      <th>Regarding</th>
      <th>Created at</th>
      <th>Last Updated</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @received_msg.each do |s| %>
      <tr>
        <td><%= s.from %></td>
        <td><%= "#{s.project_name} with project_description : #{s.project_description}" %></td>
        <td><%= s.created_at.in_time_zone("Chennai")%></td>
        <td><%= s.updated_at.in_time_zone("Chennai")%></td>
        <td><%= link_to 'Show', s %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
