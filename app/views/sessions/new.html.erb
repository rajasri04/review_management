<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<div class="row">
<div class="span6 offset3">
<%= form_for(:session, url: sessions_path, class: "form-horizontal") do |f| %>
<div class="form-group">
 <%= f.label :email ,class: "control-label col-sm-2"%>
 <div class="col-sm-10">
   <%= f.text_field :email %>
 </div>
</div>

<div class="form-group">
<%= f.label :password ,class: "control-label col-sm-2"%>
<div class="col-sm-10">
<%= f.password_field :password %>
</div>
</div>
<div class="form-group">
    <div class="col-sm-offset-3 col-sm-5">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary " %>
    </div>
</div>
<% end %>

<p>New Staff? <%= link_to "Sign up now!", signup_staffs_path %></p> </div>
<p>New Student? <%= link_to "Sign up now!", new_student_path %></p> </div>
</div>
